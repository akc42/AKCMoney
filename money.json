{
  "apps" : [
    {
      "name" : "money-api-server",
      "script" : "server/server.js",
      "args" : [
        "--color"
      ],
      "kill_timeout": 15000,
      "wait_ready": true,
      "watch" : ["server"],
      "watch_options": {"followSymlinks" : false},
      "min_uptime"       : "30s",
      "max_restarts"     : 5,
      "merge_logs" : true,
      "log_date_format" : "YYYY-MM-DD HH:mm:ss",
      "env": {
        "DEBUG_COLORS": true,
        "LOG_NO_DATE" : "yes"
      }

    }
  ]
}
